<% @tipo_producto_id = params[:tipo_producto_id].to_i %>
<%= form_for(@producto) do |f| %>
  <% if @producto.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@producto.errors.count, "error") %> prohibited this producto from being saved:</h2>

      <ul>
      <% @producto.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label "Nombre" %>
    <%= f.text_field :nombre_producto %>
  </div>
  <div class="field">
    <%= f.label "Talles" %>
    <%= f.text_field :talles_producto %>
  </div>
  <div class="field">
    <%= f.label "Foto" %>
    <%= f.file_field :foto_producto %>
  </div>
  <div class="field">
    <%= f.label :tipo_producto %>
    <%= f.collection_select :tipo_producto_id, TipoProducto.all, :id, :nombre_tipo_producto, {:selected => @tipo_producto_id} %>
  </div>
  <div class="field">
    <%= f.label "Precio" %>
    <%= f.number_field :precio %>
  </div>
  <div class="actions">
    <%= f.submit "Enviar" %>
  </div>
<% end %>

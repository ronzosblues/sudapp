
<% if current_user.try(:admin?)%>
|<%= link_to ' Editar', edit_post_path(@post) %> |
<%= link_to ' Eliminar',@post, method: :delete, data: { confirm: 'Esta seguro que desea eliminar la noticia?' } %> |
<%= link_to 'Asignar al inicio', :controller => '/posts', :action => 'inicio', :id => @post.id %> |
        <%= link_to 'Asignar al inicio', :controller => '/posts', :action => 'inicio', :id => @post.id %> | <br>
    | <%= link_to 'Agregar fotos a la nota', :controller => '/photo_posts', :action => 'new', :post_id => @post.id, :post_title => @post.post_title %> |
    <%= link_to 'Agregar video a la nota', :controller => '/video_posts', :action => 'new', :post_id => @post.id, :post_title => @post.post_title %> |
    <p></p>
<% end %>

<div class = "secciones" style = "font-size:200%"><%= @post.post_title.upcase %></div><br>

<% if @post.post_autor.nil?  %>
<% else %>
<% if @post.post_autor.gsub(/\s+/, "").empty? %>
<% else %>
<div style="background-color:#151515; padding: 10px 10px 10px 15px"><div class="fuente-tres" style ="color:#866A6A;">NOTA : <%= @post.post_autor.upcase %></div></div>

<% end %>
<% end %>


 <%= image_tag @post.post_photo.url %>


<% if @post.post_photographer.nil?  %>
<% else %>
<% if @post.post_photographer.gsub(/\s+/, "").empty? %>
<% else %>
<div style="background-color:#151515; padding: 10px 10px 10px 15px"><div class="fuente-tres" style ="color:#866A6A;">FOTO : <%= @post.post_photographer.upcase%></div></div>
<% end %>
<% end %>


<p >
  <%= simple_format(@post.post_body, :style => "color:#A4A4A4;font-family: 'Carrois Gothic SC', sans-serif;") %>
</p>

  <hr>

<% 
    @tienefoto
    Post.all.each do |post| 
         PhotoPost.all.each do |foto| 
             if foto.post == post 
                  @tienefoto = 1 
                     break 
             else 
                  @tienefoto = 0 
             end 
         end 
         end

        @tienevideo
    Post.all.each do |post| 
         VideoPost.all.each do |video| 
             if video.post == post 
                  @tienevideo = 1 
                     break 
             else 
                  @tienevideo = 0 
             end 
         end 
         end

         %>


<% if @tienefoto == 1 %>


<div style="border-bottom: solid 1px #1C1B1B">
 <ul class="small-block-grid-3 my-grid" >
 
   <% PhotoPost.all.each do |photo| %>
   <% @url = "background-image: url("+photo.photo.path+");"%>
        <% if photo.post_id == @post.id %>
              <li>
              <div ><%=link_to (photo_post_path(:id => photo.id, :allphotos => 0)){image_tag photo.photo.url, :class => "galeria"}%></div>
              <% if current_user.try(:admin?) %>
              <br>
                | <%= link_to 'Editar', (edit_photo_post_path(:id => photo.id, :post_id => @post.id, :post_title => @post.post_title)) %> |
                <%= link_to 'Eliminar', photo, method: :delete, data: { confirm: 'Esta seguro que desea eliminar la foto?' } %> |
              <% end %>
               </li>
        <% end %>
   <% end %>
 </ul>
</div>

 <% end %>

 <% if @tienevideo == 1 && @tienefoto == 1%>
 <br>
 <% end %>
 <% if @tienevideo == 1 %>

 <ul class="small-block-grid-1 my-grid">

 <%
        VideoPost.all.each do |video|
        if video.post_id == @post.id %>
        <% @video = video %>

      
        <% if @video.video_post_url.include? "youtube.com"
        @numero = @video.video_post_url.partition("=").last
        @video_code = '<iframe width=100% height=400px src="//www.youtube.com/embed/'+@numero+'" frameborder="0" allowfullscreen></iframe>'
        end %>
        <% if @video.video_post_url.include? "vimeo.com" 
         @numero = @video.video_post_url.partition(".com/").last
         @video_code = '<iframe width=100% height=400px  src="//player.vimeo.com/video/'+@numero+'" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe>'
        end %>
        <li ><div><div class = "secciones" style = "font-size:200%"><%= link_to video.video_post_title.upcase, video, :video_id => video.id %></div>
           <% if current_user.try(:admin?) %>
           <br>
                | <%= link_to 'Editar', (edit_video_post_path(:id => video.id, :post_id => @post.id, :post_title => @post.post_title)) %> |
                <%= link_to 'Eliminar', video, method: :delete, data: { confirm: 'Esta seguro que desea eliminar la foto?' } %> |
              <% end %> 
              </div>
        </li>

        <li><%= @video_code.html_safe %></li>
        
      <% end %>
    <% end%>
</ul>  
<% else %>
<br>
<% end %>

<% if user_signed_in? %>
<%= form_for @comment_post do |f| %>
  <div class="field">
    <%= f.label "DEJA TU COMENTARIO" ,:class => "fuente-tres" %>
    <%= f.text_area :content ,:class => "back-text-area-field" %>
    <%= f.hidden_field :post_id, :value => @post.id %>
    <%= f.hidden_field :user_id, :value => current_user.try(:id) %>
  </div>

  <div class="actions">
    <%= f.submit " Comentar " %>
  </div>
 
  <% end %>
  <% else %>
  
  <div class="para-comentar">P A R A &nbsp P O D E R &nbsp C O M E N T A R &nbsp D E B E S &nbsp I N I C I A R &nbsp S E S I O N .</div>
  <% end %>


    <% 
    @tienecomentario
    Post.all.each do |post| 
         CommentPost.all.each do |comentario| 
             if comentario.post == post 
                  @tienecomentario = 1 
                     break 
             else 
                  @tienecomentario = 0 
             end 
         end 
         end
         %>

<% if @tienecomentario == 1 %> 

<% if @allposts == 1 %>
<p><div class = "secciones" style = "font-size:200%">COMENTARIOS:</div></p>
<% else %>
<p><div class = "secciones" style = "font-size:200%">ULTIMOS COMENTARIOS:</div></p>
<% end %>
<hr>
<% @comments.each do |comment| %>
  <% if comment.post_id == @post.id %>
      <div class="fuente-tres" style="color:#49aec3"><strong><%= comment.user.username%> :</strong>
      <% if current_user.try(:admin?) || current_user == comment.user %>
      <%= link_to 'eliminar', comment, method: :delete, data: { confirm: 'Esta seguro que desea eliminar el comentario?' } %>
        <% end %> </div>

        <div><%= simple_format(comment.content,  :style => "color:#A4A4A4;font-family: 'Carrois Gothic SC', sans-serif;") %></div>
        
  <% end %> 
<% end %>
<hr>
<% if @allposts == 0 %>
<div><%= link_to "→ MOSTRAR TODOS LOS COMENTARIOS", post_path(:id => @post.id, :allposts => 1),:class => "link-azul" %></div>
<% end %>
<% if @allposts == 1 %>
<div><%= link_to "→ MOSTRAR SOLO LOS ULTIMOS COMENTARIOS.", post_path(:id => @post.id, :allposts => 0),:class => "link-azul" %></div>
<% end %>

<% else %>
<p><div class = "secciones" style = "font-size:200%">LA NOTA TODAVIA NO TIENE COMENTARIOS, SE EL PRIMERO!</div></p>
<% end %>





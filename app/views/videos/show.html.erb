<p id="notice"><%= notice %></p>
<% if @video.video_url.include? "youtube.com" %>
<%= @video_code ='<iframe src="'+@video.video_url+'" frameborder="0" allowfullscreen></iframe>' %>
<% end %>

<% if @video.video_url.include? "vimeo.com" %>
<%= @video_code= "<iframe src="+@video.video_url+'frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe>'%>
<% end %>

<p>
  <h1><%= @video.video_title %></h1>
</p>

<p>
  <%= @video_code.html_safe %>
</p>

<%= link_to 'Edit', edit_video_path(@video) %> |
<%= link_to 'Back', videos_path %>

@video_code = '<iframe width="100%" height="500px" src="//www.youtube.com/embed/'+@numero+'" frameborder="0" allowfullscreen></iframe>'
end %>

<% if @video.video_url.include? "vimeo.com" 
 @numero = @video.video_url.partition(".com/").last
 @video_code = '<iframe width="100%" height="500px" src="//player.vimeo.com/video/'+@numero+'" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe>'
 end %>
<p>
  <div class = "secciones" style = "font-size:200%"><%= @video.video_title.upcase %></div>
</p>

<p>
  <%= @video_code.html_safe %>
</p>
